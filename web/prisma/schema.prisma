generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                 String         @id @default(cuid())
  name               String
  rollNo             String         @unique // Using for patient ID or doctor employee ID
  email              String         @unique
  passwordHash       String
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  emailVerified      DateTime?
  age                Int?
  degree             String? // Can be repurposed for doctor's specialization
  gender             Gender?
  instituteName      String? // Can be repurposed for hospital name
  role               Role           @default(PATIENT)
  shareReports       Boolean?       @default(true)
  profileImageUrl    String?
  phone              String?
  height             Int?
  weight             Int?
  specialCondition   String?
  address            String?
  accounts           Account[]
  ActivityLog        ActivityLog[]
  assignmentsAsDoctor  Assignment[]   @relation("DoctorAssignments")
  assignmentAsPatient  Assignment?    @relation("PatientAssignment")
  availabilities     Availability[]
  conversationsAsDoctor Conversation[] @relation("DoctorConversations")
  conversationsAsPatient Conversation[] @relation("PatientConversations")
  meetingsAsDoctor   Meeting[]      @relation("DoctorMeetings")
  meetingsAsPatient  Meeting[]      @relation("PatientMeetings")
  Message            Message[]
  sessions           Session[]
}

model Availability {
  id        String   @id @default(cuid())
  doctorId  String
  startTime DateTime @db.Timestamptz(6)
  endTime   DateTime @db.Timestamptz(6)
  doctor    User     @relation(fields: [doctorId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([doctorId, startTime], map: "idx_avail_doctor_start")
}

model Meeting {
  id        String   @id @default(cuid())
  patientId String
  doctorId  String
  startTime DateTime @db.Timestamptz(6)
  endTime   DateTime @db.Timestamptz(6)
  reason    String
  status    String   @default("PENDING")
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  doctor    User     @relation("DoctorMeetings", fields: [doctorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  patient   User     @relation("PatientMeetings", fields: [patientId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([doctorId, startTime], map: "idx_meeting_doctor_start")
  @@index([patientId, startTime], map: "idx_meeting_patient_start")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ActivityLog {
  id        String   @id
  userId    String
  action    String
  details   String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId, createdAt(sort: Desc)], map: "idx_activity_user_created")
}

model Assignment {
  id        String   @id
  patientId String   @unique(map: "uniq_assignment_patient")
  doctorId  String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  doctor    User     @relation("DoctorAssignments", fields: [doctorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  patient   User     @relation("PatientAssignment", fields: [patientId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([doctorId], map: "idx_assignment_doctor")
}

model Conversation {
  id        String    @id
  patientId String
  doctorId  String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  doctor    User      @relation("DoctorConversations", fields: [doctorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  patient   User      @relation("PatientConversations", fields: [patientId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  Message   Message[]

  @@unique([patientId, doctorId], map: "uniq_convo_patient_doctor")
  @@index([doctorId], map: "idx_convo_doctor")
}

model Message {
  id             String       @id
  conversationId String
  senderId       String
  text           String
  createdAt      DateTime     @default(now()) @db.Timestamptz(6)
  Conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  User           User         @relation(fields: [senderId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([conversationId, createdAt], map: "idx_message_convo_created")
}

model Prediction {
  id        String   @id
  patientId String
  emotion   String
  createdAt DateTime @default(now()) @db.Timestamp(6)

  @@index([createdAt])
  @@index([patientId])
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
